{
  "compilerOptions": {
    "outDir": "dist",
    "module": "Node16",
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "allowJs": true,
    "strict": true,
    "removeComments": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "./src/**/*.test.ts", "./src/**/*.test.tsx"]
}
